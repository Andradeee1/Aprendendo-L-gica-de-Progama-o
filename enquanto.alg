algoritmo "semnome"
var
M: caractere
inicio
  escreval("POR FAVOR RESPONDA APENAS sim ou não")

  escreva("Já arrumou o quarto?: ")
  leia(M)

  enquanto (M = "não") faca
    escreval("CASTIGO ENQUANTO NÃO ARRUMAR O QUARTO")
    escreva("Já arrumou o quarto?: ")
    leia(M)
  fimEnquanto

  se (M = "sim") entao
     Escreval("LIBERADO")
  FimSe


fimalgoritmo
